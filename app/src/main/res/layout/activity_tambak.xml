<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/bgscreen"
    tools:context=".ui.infotambak.TambakActivity"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginRight="10dp"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="10dp"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent">
        <androidx.appcompat.widget.Toolbar
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/toolbar"
            android:elevation="4dp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            >
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:textColor="@color/black"
                android:textSize="25sp"
                android:textStyle="bold"
                android:text="@string/tittle_tambak"
                android:fontFamily="@font/poppins_bold"/>

        </androidx.appcompat.widget.Toolbar>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="124dp"
                android:background="@drawable/rounded_18px"
                android:layout_marginVertical="32dp"
                android:layout_marginHorizontal="22dp"
                android:elevation="16dp"/>

        </LinearLayout>

        <ListView
            android:id="@+id/listview_tambak"
            android:layout_width="match_parent"
            android:layout_height="800dp"
            android:layout_marginHorizontal="24dp"
            android:layout_gravity="center_horizontal">
        </ListView>

        <Button
            android:id="@+id/btn_tambahtambak"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="64dp"
            android:layout_marginHorizontal="16dp"
            android:layout_marginBottom="32dp"
            android:layout_gravity="bottom"
            android:textAllCaps="false"
            android:textSize="20sp"
            android:textColor="@color/white"
            android:text="@string/btn_tambahtambak"
            android:paddingVertical="8dp"
            android:background="@drawable/btn_primary"/>
    </LinearLayout>

</LinearLayout>