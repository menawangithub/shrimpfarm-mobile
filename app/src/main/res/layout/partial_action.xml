<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:tools="http://schemas.android.com/tools"
    tools:context="ui.home.HomeActivity">

    <ImageButton
        android:id="@+id/btn_rencanapanen"
        android:layout_width="64dp"
        android:layout_height="64dp"
        android:background="@color/bgscreen"
        android:src="@drawable/ic_rencanapanen"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/textView5"
        android:layout_width="64dp"
        android:layout_height="wrap_content"
        android:text="Rencana Panen"
        android:textAlignment="center"
        android:textColor="@color/black"
        app:layout_constraintEnd_toEndOf="@+id/btn_rencanapanen"
        app:layout_constraintStart_toStartOf="@+id/btn_rencanapanen"
        app:layout_constraintTop_toBottomOf="@id/btn_rencanapanen" />

    <ImageButton
        android:id="@+id/btn_konsultasi"
        android:layout_width="64dp"
        android:layout_height="64dp"
        android:layout_marginStart="64dp"
        android:background="@color/bgscreen"
        android:src="@drawable/ic_konsultasibudidaya"
        app:layout_constraintStart_toEndOf="@+id/btn_rencanapanen"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/textView7"
        android:layout_width="72dp"
        android:layout_height="wrap_content"
        android:text="Konsultasi Budidaya"
        android:textAlignment="center"
        android:textColor="@color/black"
        app:layout_constraintEnd_toEndOf="@+id/btn_konsultasi"
        app:layout_constraintStart_toStartOf="@+id/btn_konsultasi"
        app:layout_constraintTop_toBottomOf="@+id/btn_konsultasi" />

    <ImageButton
        android:id="@+id/btn_konten"
        android:layout_width="64dp"
        android:layout_height="64dp"
        android:layout_marginStart="64dp"
        android:background="@color/bgscreen"
        android:src="@drawable/ic_kontenbudidaya"
        app:layout_constraintStart_toEndOf="@+id/btn_konsultasi"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/textView6"
        android:layout_width="72dp"
        android:layout_height="wrap_content"
        android:text="Konten Budidaya"
        android:textAlignment="center"
        android:textColor="@color/black"
        app:layout_constraintEnd_toEndOf="@+id/btn_konten"
        app:layout_constraintStart_toStartOf="@+id/btn_konten"
        app:layout_constraintTop_toBottomOf="@+id/btn_konten" />

    <ImageButton
        android:id="@+id/btn_infotambak"
        android:layout_width="64dp"
        android:layout_height="64dp"
        android:layout_marginStart="64dp"
        android:background="@color/bgscreen"
        android:src="@drawable/ic_tambaksaya"
        app:layout_constraintStart_toEndOf="@+id/btn_konten"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:layout_width="72dp"
        android:layout_height="wrap_content"
        android:text="Tambak Saya"
        android:textAlignment="center"
        android:textColor="@color/black"
        app:layout_constraintEnd_toEndOf="@+id/btn_infotambak"
        app:layout_constraintStart_toStartOf="@+id/btn_infotambak"
        app:layout_constraintTop_toBottomOf="@+id/btn_infotambak" />

    <ImageButton
        android:id="@+id/btn_todo"
        android:layout_width="64dp"
        android:layout_height="64dp"
        android:layout_marginStart="64dp"
        android:background="@color/bgscreen"
        android:src="@drawable/ic_rencanapanen"
        app:layout_constraintStart_toEndOf="@+id/btn_infotambak"
        app:layout_constraintTop_toTopOf="parent"/>

    <TextView
        android:layout_width="72dp"
        android:layout_height="wrap_content"
        android:text="Daftar Tugas"
        android:textAlignment="center"
        android:textColor="@color/black"
        app:layout_constraintEnd_toEndOf="@+id/btn_todo"
        app:layout_constraintStart_toStartOf="@+id/btn_todo"
        app:layout_constraintTop_toBottomOf="@+id/btn_todo" />


</androidx.constraintlayout.widget.ConstraintLayout>